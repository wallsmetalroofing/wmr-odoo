<odoo>
    <data>

        <!-- Creates the view for the form to add Sub Contacts -->
        <record id="view_res_partner_wmr_contacts_form" model="ir.ui.view">
            <field name="name">res.partner.wmr_contacts.form</field>
            <field name="model">res.partner.wmr_contacts</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="email" />
                            </group>
                            <group>
                                <field name="telephone" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Creates the view to display tree view of the WMR Contacts -->
        <record id="view_res_partner_wmr_contacts_tree" model="ir.ui.view">
            <field name="name">res.partner.wmr_contacts.tree</field>
            <field name="model">res.partner.wmr_contacts</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="email" />
                    <field name="telephone" />
                </tree>
            </field>
        </record>

        <!-- Creates the view to display kanban view of the WMR Contacts -->
        <record id="view_res_partner_wmr_contacts_kanban" model="ir.ui.view">
            <field name="name">res.partner.wmr_contacts.kanban</field>
            <field name="model">res.partner.wmr_contacts</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="email" />
                    <field name="telephone" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="oe_kanban_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="oe_kanban_content">
                                        <field name="email" />
                                        <br/>
                                        <field name="telephone"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Modifies the Contact Form as our need -->
        <record id="view_res_partner_wmr_contacts_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.wmr_contacts.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page name="contacts" string="Contacts">
                        <field name="contact_ids" mode="kanban" />
                    </page>

                </xpath>
            </field>
        </record>
    </data>

    <!-- Hide for now... Menu for the Sub Contacts on main screen of Odoo -->
    <!-- <menuitem id="contacts_menu_configuration"
        name="Sub Contact"
        sequence="0"
        action="wmr_action_contacts_menu" /> -->

</odoo>