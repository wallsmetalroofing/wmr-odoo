<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_sale_wallsmetalroofing" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.wallsmetalroofing</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//label[@for='product_uom_qty']" position="before">
                <field name="categ_name" invisible="1"/>
                <field name="panel_count" attrs="{'readonly': [('categ_name','=','Metal Panels')]}"/>
                <field name="length_ft" attrs="{'readonly': [('categ_name','=','Metal Panels')]}"/>
                <field name="length_in" attrs="{'readonly': [('categ_name','=','Metal Panels')]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom_qty']" position="before">
                <field name="categ_name" invisible="1"/>
                <field name="panel_count" attrs="{'readonly': [('categ_name','=','Metal Panels')]}"/>
                <field name="length_ft" attrs="{'readonly': [('categ_name','=','Metal Panels')]}"/>
                <field name="length_in" attrs="{'readonly': [('categ_name','=','Metal Panels')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
